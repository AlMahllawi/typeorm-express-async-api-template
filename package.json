{
	"name": "typeorm-express-async-api-template",
	"version": "1.0.0",
	"description": "A minimal TypeORM, Express, and PostgreSQL template for building async REST APIs with ESM.",
	"main": "./dist/main.js",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"dev": "tsx watch ./src/main.ts",
		"build": "tsc",
		"start": "node ./dist/main.js",
		"typeorm": "tsx ./node_modules/typeorm/cli.js -d ./src/datasource.ts",
		"migrations": "pnpm typeorm migration:run",
		"migration:generate": "node ./run.js migration:generate"
	},
	"license": "MIT",
	"author": "AlMahllawi",
	"keywords": ["API", "template", "typeorm", "express", "async"],
	"packageManager": "pnpm@10.16.1",
	"dependencies": {
		"chalk": "^5.6.2",
		"dotenv": "^16.6.1",
		"express": "^4.21.2",
		"express-async-errors": "^3.1.1",
		"js-yaml": "^4.1.0",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.1.14",
		"tsx": "^4.20.5",
		"typeorm": "^0.3.26",
		"typescript": "^5.9.2",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/express": "^4.17.23",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^20.19.14",
		"@types/pg": "^8.15.5"
	}
}
